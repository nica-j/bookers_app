<h1>Books</h1>

<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <p>Body</p>
  <span><%= book.body %></span>
  
  <p><%= link_to 'Show',show_book_path(book.id) %></p>
  <p><%= link_to 'Edit',edit_book_path(book.id) %></p>
  <p><%= link_to 'Destroy',destroy_book_path(book.id), method: :delete %></p>

<% end %> 

<h1>New Book</h1>

<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %> 
  
