<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--form withのデフォルトはクリエイトなので、あえてurl指定している-->
<%= form_with model: @book ,url: book_path(@book.id), method: :patch do |f| %>
  <div class = "edit-box">
    <p>Title</p>
    <%= f.text_field :title %>
  <div class = "edit-box">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div><%= f.submit 'Update Book' %></div>
  <% end %> 


<%= link_to 'Show', book_path(@book.id) %> |
<%= link_to 'Back', books_path  %>